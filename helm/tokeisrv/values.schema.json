{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "replicaCount": {
            "type": "integer",
            "default": 1
        },
        "image": {
            "type": "object",
            "properties": {
                "repository": {
                    "type": "string"
                },
                "tag": {
                    "type": "string"
                },
                "pullPolicy": {
                    "type": "string"
                }
            }
        },
        "service": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string"
                },
                "userWhitelist": {
                    "type": "string",
                    "default": ""
                },
                "port": {
                    "type": "integer",
                    "default": 8000
                }
            }
        },
        "cloudflared": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "TunnelID": {
                    "type": "string"
                },
                "credentials": {
                    "type": "object"
                },
                "config": {
                    "type": "string"
                }
            }
        }
    }
}